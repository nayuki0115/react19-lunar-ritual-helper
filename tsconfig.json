{
  "include": ["src", "src/types/**/*.d.ts"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },

    "target": "ES2023",
    "lib": ["ES2023", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "Bundler",

    "jsx": "react-jsx",

    "types": ["vite/client"],

    "skipLibCheck": true,
    "strict": true,

    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  }
}
